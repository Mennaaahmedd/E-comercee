<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroudapp"
    tools:context=".SignIn">

    <TextView
        android:id="@+id/sign_view"
        android:layout_width="157dp"
        android:layout_height="71dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="121dp"
        android:layout_marginBottom="538dp"
        android:fontFamily="@font/acme"
        android:text="  Login"
        android:textColor="#FFFFFF"
        android:textSize="48sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/name_log"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="72dp"
        android:layout_marginBottom="452dp"
        android:hint="User Name"
        tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck">

    </EditText>

    <EditText
        android:id="@+id/pass_log"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="20dp"
        android:layout_marginEnd="76dp"
        android:layout_marginBottom="378dp"
        android:hint="Password"
        android:password="true"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,SpeakableTextPresentCheck">

    </EditText>


    <Button
        android:id="@+id/SIGNIN_"
        android:layout_width="281dp"
        android:layout_height="68dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="198dp"
        android:background="#F16D9A"
        android:backgroundTint="#DD5382"
        android:fontFamily="@font/acme"
        android:text="LOGIN"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#E91E63"
        android:textColorLink="#E91E63"
        android:textSize="18sp" />

    <CheckBox
        android:id="@+id/remember_box"
        android:layout_width="196dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="187dp"
        android:layout_marginBottom="323dp"
        android:text="Remember Me"
        android:textColor="#A39090" />

    <TextView
        android:id="@+id/foget_"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="336dp"
        android:text="Forget Password ?" />

    <TextView
        android:id="@+id/create_log"
        android:layout_width="243dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="140dp"
        android:text="Create an account ? Register"
        android:textSize="16sp" />
</RelativeLayout>