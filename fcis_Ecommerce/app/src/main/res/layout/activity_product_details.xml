<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAE1E1"
    tools:context=".product_details">

    <TextView
        android:id="@+id/textView"
        android:layout_width="242dp"
        android:layout_height="38dp"
        android:layout_marginStart="44dp"
        android:text="Product details"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.101" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#EAE1E1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.891"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08"
        app:srcCompat="@drawable/cart"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/imgproduct_detail"
        android:layout_width="312dp"
        android:layout_height="233dp"
        android:background="#2E2B2B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.347"
        app:srcCompat="@drawable/pinkshirt" />

    <TextView
        android:id="@+id/productName_detail"
        android:layout_width="148dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="216dp"
        android:text="Pink Shirt"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgproduct_detail" />

    <TextView
        android:id="@+id/productPrice_detail"
        android:layout_width="152dp"
        android:layout_height="39dp"
        android:layout_marginStart="44dp"
        android:text="100.0$"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productName_detail"
        app:layout_constraintVertical_bias="0.082" />

    <ImageButton
        android:id="@+id/add_cart"
        android:layout_width="206dp"
        android:layout_height="94dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgproduct_detail"
        app:layout_constraintVertical_bias="0.893"
        app:srcCompat="@drawable/addtocart"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/addcart_txt"
        android:layout_width="104dp"
        android:layout_height="46dp"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/acme"
        android:text="Add To Cart"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/add_cart"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="@+id/add_cart"
        app:layout_constraintTop_toTopOf="@+id/add_cart" />

</androidx.constraintlayout.widget.ConstraintLayout>